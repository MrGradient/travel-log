# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~


# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file               controllers.Assets.at(path="/public", file)


PUT        /putTrack/:activity         @controllers.TracksController.uploadTracks(activity)

GET        /json/getTrack/:date        @controllers.TracksController.getTrackForLocalDate(date)

GET        /json/demoData              @controllers.TripController.insertDemoTrip()



# Home page
GET        /                           @controllers.Application.index(trackId: String ?="")
GET        /:trip                      @controllers.TripController.getTripById(trip)

GET        /:trip/:daytour             @controllers.TripController.getDayTour(trip, daytour)


