# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~


# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                  controllers.Assets.at(path="/public", file)

# api
# track specific
PUT         /api/putTrack/:timezone/:activity   @controllers.TracksController.uploadTracks(timezone: Int, activity)
#trip specific
GET         /api/demoData                       @controllers.TripController.insertDemoTrip
# dayTour specific - json stuff
GET         /api/getDayTourInformation/:date    @controllers.JsonController.getDayTourInformation(date)

# Image upload
PUT         /api/images/uploadImage/:date/:name        @controllers.ImageController.uploadImage(date, name)
GET         /api/images/getImage/:name                 @controllers.ImageController.getImage(name)


# admin
GET         /admin                          @controllers.AdminController.index
GET         /admin/edit/:trip               @controllers.AdminController.tripDetails(trip)
POST        /admin/trip/addTrip             @controllers.AdminController.addTrip
POST        /admin/dayTour/addDayTour/:trip @controllers.AdminController.addDayTour(trip)

# auth
GET         /admin/login                   @controllers.AuthController.login
GET         /admin/logout                  @controllers.AuthController.logout
POST        /admin/auth                    @controllers.AuthController.authenticate

# Home page
GET         /                              @controllers.Application.index
GET         /:trip                         @controllers.TripController.getTripById(trip)
GET         /:trip/:daytour                @controllers.TripController.getDayTour(trip, daytour)


