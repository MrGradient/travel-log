# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~


# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                  controllers.Assets.at(path="/public", file)

# api
PUT         /api/putTrack/:activity        @controllers.TracksController.uploadTracks(activity)
GET         /api/getTrack/:date            @controllers.TracksController.getTrackForLocalDate(date)
GET         /api/demoData                  @controllers.TripController.insertDemoTrip()

# admin
GET         /admin                         @controllers.AdminController.index

# auth
GET         /admin/login                   @controllers.Auth.login
GET         /admin/logout                  @controllers.Auth.logout
POST        /admin/auth                    @controllers.Auth.authenticate

# Home page
GET         /                              @controllers.Application.index
GET         /:trip                       @controllers.TripController.getTripById(trip)
GET         /:trip/:daytour              @controllers.TripController.getDayTour(trip, daytour)



